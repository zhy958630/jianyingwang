
.content{
	width: 100%;
	height: 800px;
	background:url(../img/登录界面背景.png) repeat-x;
}

.main_box {
    position: absolute;
     top:50%; 
     left:50%; 
     margin-top:-240px; 
     margin-left: -400px; 
     padding: 20px; 
     width:760px; 
     height:500px;
	 background-image: url(../img/1.png);
     border-radius: 10px;    
}

.login_box .form-group span a{
		text-align: right;
		color: white;
		font-size: 20px;
		margin-left:120px;
		text-decoration: none;
		transition-duration: initial;
	}
.login_box .form-group span a:hover{
		color: cornflowerblue;
		cursor: pointer;
	}
.login_logo {
	margin-bottom: 30px; 
	height: 45px; 	
	text-align: center;
	}
	
.login_logo img {
	height: 100px;
	width: 260px;
	transition: all 0.5s ease;
	margin-left: 30px;
	}
.login_logo img:hover{
	height: 105px;
	width: 270px;
}	
.login_form {
	line-height: 30px;
	padding-top: 60px;
	font-size: 16px;
	}
	
.login_box .form-control {
	 display: inline-block; 
    *display: inline;
     width: auto; 
     font-size: 18px;
     }
     
.login_box .form-control {
	width: 320px;
	}
	
.login_box .form-control.x164 {
	width: 164px;
	}
	
.login_box .form-group {
	margin-bottom: 20px;
	margin-left:80px ;
	}

.login_box .form-group label.t {
	width: 140px; 
	text-align: right; 
	cursor: pointer;
	}
	
.login_box .form-group.space {
	width: 560px;
	padding-top: 15px; 
	border-top: 1px #FFF dotted;
	}

.login_box .form-group img {
	margin-top: 1px; 
	height: 32px; 
	vertical-align: top;
	}
	
.login_box .m {
	cursor: pointer;
	}
	
.bottom {
	text-align: center; 
	font-size: 12px;
	}
