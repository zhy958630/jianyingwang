
.content{
	width: 100%;
	height: 800px;
	background:url(../img/登录界面背景.png) repeat-x;
}

.main_box {
    position: absolute;
     top:50%; 
     left:50%; 
     margin-top:-240px; 
     margin-left: -400px; 
     padding: 20px; 
     width:760px; 
     height:500px;
	 background-image: url(../img/1.png);
     border-radius: 10px;    
}

span{
	text-align: right;
	color: white;
	font-size: 20px;
	margin-left:120px;
	}
span:hover{
		color: cornflowerblue;
		cursor: pointer;
	}
.login_logo {
	margin-bottom: 10px; 
	height: 40px; 
	text-align: center;
	}
	
.login_logo img {
	height: 101px;
	width: 259px;	
	margin-left: 20px;
	transition: all 0.5s ease;
	}
.login_logo img:hover{
	height: 106px;
	width: 269px;
}	
.login_form {
	padding-top: 80px;
	font-size: 16px;
	}
	
.login_box .form-control {
	 display: inline-block; 
    *display: inline;
     width: auto; 
     font-size: 18px;
     }
 .login_box .form-group .aff {
 	border-radius: 5px;
 	height: 30px;
 	width: 100px;
 	margin-left: 5px;
 }      
.login_box .form-control {
	width: 350px;
	}
	
.login_box .form-control.x164 {
	width: 164px;
	}
	
.login_box .form-group {
	line-height: 35px;
	margin-bottom: 20px;
	margin-left:80px ;
	}

.login_box .form-group label.t {
	width: 140px; 
	text-align: right; 
	cursor: pointer;
	}
	
.login_box .form-group.space {
	width: 560px;
	padding-top: 15px; 
	border-top: 1px #FFF dotted;
	}
		
#submit_btn{
	margin-left: 70px;
}
.login_box .form-group img {
	margin-top: 1px; 
	height: 32px; 
	vertical-align: top;
	}
	
.login_box .m {
	cursor: pointer;
	}
	
.bottom {
	text-align: center; 
	font-size: 12px;
	}
